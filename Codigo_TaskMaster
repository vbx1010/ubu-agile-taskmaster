import java.util.ArrayList;
import java.util.Scanner;

/**
 * TaskMaster - Proyecto Gestión Ágil
 * Equipo: Bogdan, Elena, Carlos, Sofía, Miguel
 */
public class Main {
    // Clase interna para representar una Tarea (Lógica de Carlos)
    static class Task {
        String description;
        boolean isDone;

        Task(String description) {
            this.description = description;
            this.isDone = false;
        }

        @Override
        public String toString() {
            return "[" + (isDone ? "X" : " ") + "] " + description;
        }
    }

    public static void main(String[] args) {
        ArrayList<Task> tasks = new ArrayList<>();
        Scanner scanner = new Scanner(System.in);
        int option = 0;

        System.out.println("=== TASKMASTER: SCRUM EDITION ===");
        
        while (option != 4) {
            System.out.println("\n1. Añadir Tarea\n2. Listar Tareas\n3. Marcar como Completada\n4. Salir");
            System.out.print("Seleccione una opción: ");
            
            try {
                option = Integer.parseInt(scanner.nextLine());
            } catch (Exception e) {
                System.out.println("Error: Introduce un número válido.");
                continue;
            }

            switch (option) {
                case 1:
                    System.out.print("Descripción de la tarea: ");
                    String desc = scanner.nextLine();
                    tasks.add(new Task(desc));
                    System.out.println("Tarea añadida con éxito.");
                    break;
                case 2:
                    System.out.println("\n--- LISTA DE TAREAS ---");
                    if (tasks.isEmpty()) System.out.println("No hay tareas pendientes.");
                    for (int i = 0; i < tasks.size(); i++) {
                        System.out.println((i + 1) + ". " + tasks.get(i));
                    }
                    break;
                case 3:
                    System.out.print("Número de tarea a completar: ");
                    int index = Integer.parseInt(scanner.nextLine()) - 1;
                    if (index >= 0 && index < tasks.size()) {
                        tasks.get(index).isDone = true;
                        System.out.println("¡Tarea completada!");
                    } else {
                        System.out.println("Número inválido.");
                    }
                    break;
                case 4:
                    System.out.println("Cerrando TaskMaster. ¡Buen trabajo, equipo!");
                    break;
                default:
                    System.out.println("Opción no válida.");
            }
        }
        scanner.close();
    }
}
